<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rate_club"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jt328mth.yelpsimilar.RateClub">

    <TextView
        android:text="Rate a club"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="37dp"
        android:id="@+id/textViewRate"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textAppearance="@android:style/TextAppearance.Holo.Medium"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Club Name"
        android:ems="10"
        android:layout_below="@+id/textViewRate"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp"
        android:id="@+id/editTextClub" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextClub"
        android:layout_alignLeft="@+id/editTextClub"
        android:layout_alignStart="@+id/editTextClub"
        android:layout_marginTop="27dp"
        android:id="@+id/ratingBar" />

    <Button
        android:text="Rate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ratingBar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="67dp"
        android:id="@+id/buttonRate" />
</RelativeLayout>
